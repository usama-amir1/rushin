<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Form -->
    <route url="/V1/formBuilderForm/:formId" method="GET">
        <service class="BlueFormBuilder\Core\Api\FormRepositoryInterface" method="get"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::form"/>
        </resources>
    </route>
    <route url="/V1/formBuilderForm/search" method="GET">
        <service class="BlueFormBuilder\Core\Api\FormRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::form"/>
        </resources>
    </route>
    <route url="/V1/formBuilderForm" method="POST">
        <service class="BlueFormBuilder\Core\Api\FormRepositoryInterface" method="save"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::form"/>
        </resources>
    </route>
    <route url="/V1/formBuilderForm/:id" method="PUT">
        <service class="BlueFormBuilder\Core\Api\FormRepositoryInterface" method="save"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::form"/>
        </resources>
    </route>
    <route url="/V1/formBuilderForm/:formId" method="DELETE">
        <service class="BlueFormBuilder\Core\Api\FormRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::form"/>
        </resources>
    </route>
    <!-- Submission -->
   <route url="/V1/formBuilderSubmission/:submissionId" method="GET">
        <service class="BlueFormBuilder\Core\Api\SubmissionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::submission"/>
        </resources>
    </route>
    <route url="/V1/formBuilderSubmission/search" method="GET">
        <service class="BlueFormBuilder\Core\Api\SubmissionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::submission"/>
        </resources>
    </route>
    <route url="/V1/formBuilderSubmission" method="POST">
        <service class="BlueFormBuilder\Core\Api\SubmissionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::submission"/>
        </resources>
    </route>
    <route url="/V1/formBuilderSubmission/:id" method="PUT">
        <service class="BlueFormBuilder\Core\Api\SubmissionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::submission"/>
        </resources>
    </route>
    <route url="/V1/formBuilderSubmission/:submissionId" method="DELETE">
        <service class="BlueFormBuilder\Core\Api\SubmissionRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="BlueFormBuilder_Core::submission"/>
        </resources>
    </route>
</routes>
