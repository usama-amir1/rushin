<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="BlueFormBuilder_Core::blueformbuilder" title="BlueFormBuilder" sortOrder="10">
                        <resource id="BlueFormBuilder_Core::form" title="Form" translate="title" sortOrder="10">
                            <resource id="BlueFormBuilder_Core::form_save" title="Save Form" sortOrder="10" />
                            <resource id="BlueFormBuilder_Core::form_delete" title="Delete Form" sortOrder="20" />
                        </resource>
                        <resource id="BlueFormBuilder_Core::submission" title="Submission" translate="title" sortOrder="20">
                            <resource id="BlueFormBuilder_Core::submission_save" title="Save Submission" sortOrder="10" />
                            <resource id="BlueFormBuilder_Core::submission_delete" title="Delete Submission" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="BlueFormBuilder_Core::settings" title="BlueFormBuilder" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>